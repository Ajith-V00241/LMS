<div class="fullPage" >
	<div class="header" >
		<%= link_to image_tag('/assets/bookLogo.jpg'), '/books' , :class=>'logo' %>

		<center>
			<h1 > LIBRARY MANAGEMENT SYSTEM</h1>
			<p> A platform to search your favorite book </p>
		</center>
		<div class="tab">
			<div class="contents">
				Welcome, <%= current_user.full_name %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

				<a href='/users/lendedBooks'>Lended books</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

				<a href='/logOut'>Logout</a>
				&nbsp;&nbsp;&nbsp;&nbsp;
			</div>
			<%= form_tag(searched_path, method: :get) do %>
				<%= text_field_tag(:search, params[:search] ,:placeholder=>"Search By Name") %>
				<%= submit_tag ("Search") %>
			<% end %>

		</div>

	</div>

	<div class="container" >
		<% @books.each do |book| %>
			<center>
				<%= link_to book_path(book) do %>
					<div class="thumbnail">
						<img src='<%= book.image %>' >
						<div class="caption">
							<h3 class="title"> <%= book.title %></h3>
							<p class="author"><%= book.author %></p>
						</div>
					</div>
				<% end %>
			</center>
			<br><br><br><br>
		<% end %>

	</div>

	<div class="footer">
		Visit Soon
	</div>
</div>